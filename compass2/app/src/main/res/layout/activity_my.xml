<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MyActivity"
    android:background="@drawable/foto"
    android:id="@+id/activity_my">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/textView_text"
        android:id="@+id/textView"
        android:layout_toEndOf="@+id/imageDetails"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/imageViewCompass" />

    <TextView
        android:id="@+id/tvHeading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/heading_text"
        android:layout_toEndOf="@+id/showImg"
        android:layout_marginStart="49dp"
        android:layout_alignTop="@+id/imageViewCompass" />
    <ImageView
        android:id="@+id/imageViewCompass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/compass"
        android:layout_toEndOf="@+id/showImg"
        android:layout_marginTop="200dp"
        android:layout_marginLeft="0dp"
         />

    <Button android:text="@string/capturePhoto_text"
        android:id="@+id/photo"
        android:onClick="getPhoto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/imageDetails"
        android:layout_marginTop="70dp"
        android:layout_below="@+id/textView"
        android:layout_alignEnd="@+id/message"
        android:layout_alignParentStart="true"
        />

    <TextView
        android:id="@+id/message"
        android:text="@string/clickButton_text"
        android:textSize="14sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/photo"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/imageDetails"
        android:layout_below="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginStart="20dp"
        />

    <ImageView
        android:id="@+id/showImg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_below="@+id/imageDetails"
        />

</RelativeLayout>
